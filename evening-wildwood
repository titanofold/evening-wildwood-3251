#!/usr/bin/env perl
use Mojolicious::Lite;

# Documentation browser under "/perldoc"
# plugin 'PODRenderer';

sub add_pilot {
  my $pilot = shift;
  my $role  = shift;
  return 0 unless $role =~ /^orca|rorqual|miner|hauler$/i;
  return 1;
}

sub add_harvest {

}

sub add_expense { }

sub add_income { }

get '/' => sub {
  my $self = shift;
  $self->render('index');
};

get '/test' => sub {
  my $self = shift;
  $self->stash(headers => $self->req->headers);
  $self->render;
};

app->start;
__DATA__

